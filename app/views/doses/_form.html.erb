<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
     <h3 class="text-center margin-top">Post dose for <%= @cocktail.name %> </h3>

     <% if @dose.errors.any? %>
     <div id="error_explanation">
      <ul>
        <% @dose.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description, placeholder: "2 tea spoons" %>
    <%= f.input :ingredient_id, collection: Ingredient.all, prompt: "Pick one ingredient" %>


    <%= f.submit "Add a dose", class: "btn btn-success" %>
    <% end %>

    <%= link_to 'Back', cocktail_path(@cocktail) %>

    </div>
  </div>
</div>
